<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/padding_8</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:backgroundTint">@color/btn_green</item>
        <item name="android:textColor">@color/background_color</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>

    <style name="CalendarViewStyle" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/text_black</item> <!-- Цвет заголовка -->
        <item name="colorAccent">@color/btn_green</item> <!-- Цвет выбранной даты -->
    </style>

    <style name="CalendarDateText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item> <!-- Цвет чисел -->
    </style>

    <style name="CalendarWeekDayText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_gray</item> <!-- Цвет дней недели -->
    </style>

    <style name="CalendarHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_black</item> <!-- Цвет месяца и года -->
    </style>

    <style name="NotesInputEditTextStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>
</resources>