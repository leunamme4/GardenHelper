<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/note_shape"
    android:paddingTop="@dimen/padding_16"
    android:layout_marginBottom="@dimen/padding_16">

    <TextView
        android:id="@+id/note_header"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edit"
        android:textColor="@color/text_black"
        android:layout_marginStart="@dimen/padding_16"
        android:textSize="@dimen/text_22"
        android:fontFamily="@font/ys_text_regular"
        android:textFontWeight="600"
        android:layout_marginBottom="@dimen/padding_8"
        android:text="TEST"/>

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_delete"
        android:backgroundTint="@color/background_color"
        android:background="@color/background_color"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/padding_8"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/edit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/edit_button"
        android:backgroundTint="@color/background_color"
        android:background="@color/background_color"
        app:layout_constraintEnd_toStartOf="@id/delete"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/btn_green" />

    <TextView
        android:id="@+id/note_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/note_header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/padding_16"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_14"
        android:textFontWeight="400"
        android:text="test"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/padding_16"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/padding_16"
        app:layout_constraintTop_toBottomOf="@id/note_text">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            app:ci_drawable="@color/btn_green"
            app:ci_height="8dp"
            app:ci_margin="4dp"
            app:ci_width="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>