<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.objects.object.ObjectFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/background_color"
            android:src="@drawable/ic_back_button_48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/top_tab"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginVertical="4dp"
            android:background="@color/background_color"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:paddingStart="16dp"
            android:text="@string/object"
            android:textColor="@color/text_black"
            android:textFontWeight="500"
            android:textSize="@dimen/text_22"
            app:layout_constraintBottom_toTopOf="@id/top_tab"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/edit_object"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/padding_8"
            android:src="@drawable/edit_button"
            android:backgroundTint="@color/background_color"
            android:background="@color/background_color" />

       <ImageView
           android:id="@+id/icon"
           android:layout_width="75dp"
           android:layout_height="75dp"
           app:layout_constraintTop_toBottomOf="@id/top_tab"
           app:layout_constraintStart_toStartOf="parent"
           android:backgroundTint="@color/background_color"
           android:background="@color/background_color"
           app:layout_constraintEnd_toEndOf="parent"
           />

        <TextView
            android:id="@+id/object_name_header"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/background_color"
            app:layout_constraintTop_toBottomOf="@id/icon"
            android:layout_marginHorizontal="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_16"
            android:textColor="@color/text_black"
            android:fontFamily="@font/ys_display_bold"
            android:text="@string/name_notification"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/object_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/background_color"
            app:layout_constraintTop_toBottomOf="@id/object_name_header"
            android:layout_marginHorizontal="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_8"
            android:textColor="@color/text_black"
            android:fontFamily="@font/ys_text_regular"
            android:text="@string/name_notification"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/object_description_header"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/background_color"
            app:layout_constraintTop_toBottomOf="@id/object_name"
            android:layout_marginHorizontal="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_16"
            android:textColor="@color/text_black"
            android:fontFamily="@font/ys_display_bold"
            android:text="@string/et_object_description_hint"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/object_description"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/background_color"
            app:layout_constraintTop_toBottomOf="@id/object_description_header"
            android:layout_marginHorizontal="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_8"
            android:textColor="@color/text_black"
            android:fontFamily="@font/ys_text_regular"
            android:text="@string/et_object_description_hint"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/type_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/object_description"
            android:layout_marginHorizontal="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_16"
            android:text="@string/type_object_header"
            android:textColor="@color/text_black"
            android:fontFamily="@font/ys_display_bold"
            />

        <TextView
            android:id="@+id/type"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/background_color"
            app:layout_constraintTop_toBottomOf="@id/type_header"
            android:layout_marginHorizontal="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_8"
            android:textColor="@color/text_black"
            android:fontFamily="@font/ys_text_regular"
            android:text="@string/type_object_header"
            android:textSize="16dp" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/black"
            android:layout_marginTop="@dimen/padding_16"
            android:layout_marginHorizontal="@dimen/padding_16"
            app:layout_constraintTop_toBottomOf="@id/type"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/notes_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_16"
            android:fontFamily="@font/ys_display_bold"
            android:text="@string/notes"
            android:textColor="@color/text_black"
            android:textFontWeight="600"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator" />

        <ImageButton
            android:id="@+id/add_note"
            android:layout_height="36dp"
            android:layout_width="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/notes_header"
            app:layout_constraintBottom_toBottomOf="@id/notes_header"
            android:layout_marginTop="@dimen/padding_8"
            android:layout_marginEnd="@dimen/padding_8"
            android:layout_marginBottom="@dimen/padding_8"
            android:src="@drawable/ic_plus_create_obj"
            android:background="@color/background_color" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_16"
            android:nestedScrollingEnabled="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notes_header"
            tools:listitem="@layout/item_note" />

        <View
            android:id="@+id/separator2"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/black"
            android:layout_marginTop="@dimen/padding_16"
            android:layout_marginHorizontal="@dimen/padding_16"
            app:layout_constraintTop_toBottomOf="@id/rv_notes"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/notifications_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_16"
            android:fontFamily="@font/ys_display_bold"
            android:text="@string/notifications"
            android:textColor="@color/text_black"
            android:textFontWeight="600"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator2" />

        <ImageButton
            android:id="@+id/add_notification"
            android:layout_height="36dp"
            android:layout_width="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/notifications_header"
            app:layout_constraintBottom_toBottomOf="@id/notifications_header"
            android:layout_marginTop="@dimen/padding_8"
            android:layout_marginEnd="@dimen/padding_8"
            android:layout_marginBottom="@dimen/padding_8"
            android:src="@drawable/ic_plus_create_obj"
            android:background="@color/background_color" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_16"
            android:nestedScrollingEnabled="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notifications_header"
            tools:listitem="@layout/item_notification"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>