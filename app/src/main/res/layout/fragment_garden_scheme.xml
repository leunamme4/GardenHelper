    <FrameLayout
        android:id="@+id/field_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:nestedScrollingEnabled="true"
        app:layout_constraintBottom_toTopOf="@id/controlPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fieldControls">

        <FrameLayout
            android:id="@+id/field"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:background="@drawable/field_border"
            android:nestedScrollingEnabled="true" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/addIconButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/padding_16"
        android:layout_marginBottom="@dimen/padding_16"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/background_color"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toTopOf="@id/controlPanel"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Панель управления иконками-->
    <HorizontalScrollView
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/field_container">

        <LinearLayout
            android:id="@+id/controlPanel_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="@dimen/padding_8">

            <ImageButton
                android:id="@+id/selectedIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="@dimen/padding_8"
                android:layout_marginEnd="@dimen/padding_16"
                android:layout_marginBottom="@dimen/padding_8"
                android:background="@color/background_color" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/decreaseWidth"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btn_green"
                android:text="-"
                android:textColor="@color/background_color" />

            <TextView
                android:id="@+id/widthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ширина"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_16" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/increaseWidth"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_16"
                android:backgroundTint="@color/btn_green"
                android:text="+"
                android:textColor="@color/background_color" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/decreaseHeight"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btn_green"
                android:text="-"
                android:textColor="@color/background_color" />

            <TextView
                android:id="@+id/heightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Высота"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_16" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/increaseHeight"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/btn_green"
                android:text="+"
                android:textColor="@color/background_color" />

            <ImageButton
                android:id="@+id/delete_object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/padding_8"
                android:layout_marginEnd="@dimen/padding_16"
                android:layout_marginBottom="@dimen/padding_8"
                android:background="@color/background_color"
                android:src="@drawable/ic_delete_garden_object" />
        </LinearLayout>
    </HorizontalScrollView>
