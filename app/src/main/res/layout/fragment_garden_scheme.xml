    <TextView
        android:id="@+id/field_control_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_8"
        android:layout_marginTop="@dimen/padding_8"
        android:fontFamily="@font/ys_display_bold"
        android:text="Управление полем"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Панель управления размером поля -->
    <LinearLayout
        android:id="@+id/fieldControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/field_control_header">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/decreaseFieldWidth"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/btn_green"
            android:text="-"
            android:textColor="@color/background_color" />

        <TextView
            android:id="@+id/widthFieldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ширина"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_16" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/increaseFieldWidth"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_16"
            android:backgroundTint="@color/btn_green"
            android:text="+"
            android:textColor="@color/background_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/decreaseFieldHeight"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/btn_green"
            android:text="-"
            android:textColor="@color/background_color" />

        <TextView
            android:id="@+id/widthHeightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Высота"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_16" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/increaseFieldHeight"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/btn_green"
            android:text="+"
            android:textColor="@color/background_color" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_marginEnd="@dimen/padding_8"
        android:background="@drawable/rounded_corners_buttons"
        android:backgroundTint="@color/btn_green"
        android:src="@drawable/save"
        android:textColor="@color/background_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fieldControls" />

