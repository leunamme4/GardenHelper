<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="24dp">

    <!-- Лого -->
    <ImageView
        android:id="@+id/logoImageLogin"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_plant"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/emailFieldLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/btn_green" />

    <TextView
        android:id="@+id/login_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/ys_display_bold"
        android:text="@string/login"
        android:textColor="@color/text_black"
        android:textFontWeight="600"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImageLogin" />

    <!-- Email -->
    <EditText
        android:id="@+id/emailFieldLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Почта"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/text_black"
        android:textColor="@color/text_black"
        app:layout_constraintTop_toBottomOf="@id/login_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Пароль -->
    <EditText
        android:id="@+id/passwordFieldLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Пароль"
        android:textColorHint="@color/text_black"
        android:textColor="@color/text_black"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/emailFieldLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Кнопка входа -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn_green"
        android:textAllCaps="false"
        android:textColor="@color/background_color"
        android:textSize="@dimen/text_16"
        android:padding="@dimen/padding_8"
        android:fontFamily="@font/ys_display_regular"
        android:textFontWeight="500"
        android:text="Войти"
        android:background="@drawable/rounded_corners_auth_buttons"
        app:layout_constraintTop_toBottomOf="@id/passwordFieldLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp" />


    <!-- Переключение на регистрацию -->
    <TextView
        android:id="@+id/goToRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нет аккаунта? Зарегистрироваться"
        android:textColor="@color/btn_green"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/loginButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
