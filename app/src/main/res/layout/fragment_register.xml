<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/registerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/background_color">

    <!-- Лого -->
    <ImageView
        android:id="@+id/logoImageRegister"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_plant"
        app:tint="@color/btn_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/emailFieldRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/register_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/ys_display_bold"
        android:text="@string/register"
        android:textColor="@color/text_black"
        android:textFontWeight="600"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImageRegister" />

    <!-- Email -->
    <EditText
        android:id="@+id/emailFieldRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Почта"
        android:textColorHint="@color/text_black"
        android:textColor="@color/text_black"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/register_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Пароль -->
    <EditText
        android:id="@+id/passwordFieldRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Пароль"
        android:textColorHint="@color/text_black"
        android:textColor="@color/text_black"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/emailFieldRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Подтверждение пароля -->
    <EditText
        android:id="@+id/confirmPasswordField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Подтвердите пароль"
        android:textColorHint="@color/text_black"
        android:textColor="@color/text_black"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/passwordFieldRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Кнопка регистрации -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn_green"
        android:textAllCaps="false"
        android:textColor="@color/background_color"
        android:textSize="@dimen/text_16"
        android:padding="@dimen/padding_8"
        android:textFontWeight="500"
        android:fontFamily="@font/ys_display_regular"
        android:text="Зарегистрироваться"
        android:background="@drawable/rounded_corners_auth_buttons"
        app:layout_constraintTop_toBottomOf="@id/confirmPasswordField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="36dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
